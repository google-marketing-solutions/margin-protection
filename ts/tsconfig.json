{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "noImplicitThis": true,
    "useDefineForClassFields": true,

    "types": [
      "google-apps-script"
    ],
    "paths": {
      "common/*": ["common/*"],
      "sa360/*": ["sa360/src/*"],
      "dv360/*": ["dv360/src/*"],
      "dv360_api/*": ["dv360_api/*"],
      "googleads/*": ["googleads/src/*"]
    }
  },
  "include": ["**/src/**/*", "outs.d.ts", "common/**/*"],
  "exclude": ["**/node_modules/**/*", "**/dist/**/*"]
}
